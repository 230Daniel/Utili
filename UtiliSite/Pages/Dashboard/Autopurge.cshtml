@page "{guild?}/autopurge"
@using Database.Data
@using Discord.Rest
@model UtiliSite.Pages.Dashboard.AutopurgeModel
@{
    Layout = "Shared/_Layout.cshtml";
}

@{
    if (ViewData["autopurgeRows"] == null)
    {
        return;
    }

    List<AutopurgeRow> autopurgeRows = (List<AutopurgeRow>)ViewData["autopurgeRows"];
    RestGuild guild = ViewData["Guild"] as RestGuild;
    List<RestTextChannel> textChannels = DiscordModule.GetTextChannelsAsync(ViewData["Guild"] as RestGuild).GetAwaiter().GetResult();
    List<RestTextChannel> nonAutopurgeTextChannels = textChannels.Where(x => autopurgeRows.Count(y => y.ChannelId == x.Id) == 0).ToList();
}

@foreach (AutopurgeRow row in autopurgeRows)
{
    string channelName = textChannels.First(x => x.Id == row.ChannelId).Name;
    <form name="form-@row.Id" method="post">

        <input type="hidden" name="rowId" value="@row.Id" />

        <div class="input-group flex-nowrap">
            <div class="input-group-prepend">
                <span class="input-group-text">#</span>
            </div>
            <input type="text" class="form-control" style="background: unset;" value="@channelName" readonly>
        </div>

        <div class="input-group flex-nowrap">
            <div class="input-group-prepend">
                <span class="input-group-text">Threshold</span>
            </div>
            <input type="text" name="timespan" class="form-control" value="@row.Timespan">
        </div>

        <div class="input-group flex-nowrap">

            <div class="input-group-prepend">
                <span class="input-group-text">Mode</span>
            </div>

            <select class="custom-select" name="mode">
                <!option value="0" @AutopurgeModel.GetIsSelected(0, row)>All messages</!option>
                <!option value="1" @AutopurgeModel.GetIsSelected(1, row)>Bot messages</!option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
    </form>
    <form method="post">
        <input type="hidden" name="removeChannel" value="@row.Id" />
        <button type="submit" class="btn btn-danger">Remove</button>
    </form>
}

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" id="dropdownAddChannel" aria-haspopup="true" aria-expanded="false">
        Add channel
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownAddChannel">

        @foreach (RestTextChannel channel in nonAutopurgeTextChannels)
        {
            <form method="post">
                <input type="hidden" name="addChannel" value="@channel.Id" />
                <button class="dropdown-item" type="submit">
                    #@channel.Name
                </button>
            </form>
        }

    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/dashboard/submit.js" asp-append-version="true"></script>
<script src="~/js/dashboard/autopurge.js" asp-append-version="true"></script>