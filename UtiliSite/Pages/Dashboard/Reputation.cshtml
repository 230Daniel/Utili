@page "{guild?}/reputation"
@using Database.Data
@using Discord
@using Discord.Rest
@model UtiliSite.Pages.Dashboard.ReputationModel
@{
    if (ViewData["guild"] == null) { return; }

    Layout = "Shared/_Layout.cshtml";
    ViewData["Title"] = "Reputation - Utili Dashboard";

    ViewData["heading"] = "Reputation";
    ViewData["subheading"] = "Track a user's reputation using reactions\nrep addEmote [emote] [value]";

    ViewData["detailed"] = "Add emotes using the command below.\nEach emote has a value which directly changes the receiver's reputation. The value can be negative, as can a user's reputation.";

    ReputationRow row = (ReputationRow) ViewData["row"];
}

<div class="row">
    @foreach ((IEmote, int) emote in row.Emotes)
    {
        <div class="pb-4">
            <div class="col-md-12">
                <div class="card-settings">
                    <form method="post">

                        <input type="hidden" name="emote" value="@emote.Item1.ToString()" />

                        <div class="input-group flex-nowrap">

                            <input type="text" class="form-control card-emphasis" style="" value="@emote.Item1.Name" readonly>

                            <button type="submit" name="noajax" asp-page-handler="Remove" class="btn btn-remove card-emphasis">
                                <svg width="38px" height="38px" viewBox="0 0 16 16" class="bi bi-x" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                </svg>
                            </button>

                        </div>

                        <div class="input-group flex-nowrap">

                            <div class="input-group-prepend">
                                <span class="input-group-text">Value</span>
                            </div>

                            <input type="text" name="value" class="form-control card-component" value="@emote.Item2">

                        </div>

                        <div class="input-group flex-nowrap">
                            <div class="input-group-prepend card-emphasis">
                                <span class="input-group-text card-emphasis"></span>
                            </div>
                            <div class="input-group-prepend card-emphasis">
                                <span class="input-group-text card-emphasis"></span>
                            </div>
                            <button type="submit" class="btn btn-save btn-width card-emphasis">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/dashboard/submit.js" asp-append-version="true"></script>
