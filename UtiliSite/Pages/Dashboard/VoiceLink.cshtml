@page "{guild?}/voicelink"
@using Database.Data
@using Discord.Rest
@model UtiliSite.Pages.Dashboard.VoiceLinkModel
@{
    if (ViewData["guild"] == null) { return; }

    Layout = "Shared/_Layout.cshtml";
    ViewData["Title"] = "Voice Link - Utili Dashboard";

    ViewData["heading"] = "Voice Link";
    ViewData["subheading"] = "Create a text channel which only people connected to voice can see";
    ViewData["detailed"] = "";

    VoiceLinkRow row = (VoiceLinkRow)ViewData["row"];
    List<RestVoiceChannel> excludedChannels = (List<RestVoiceChannel>) ViewData["excludedChannels"];
    List<RestVoiceChannel> nonExcludedChannels = (List<RestVoiceChannel>) ViewData["nonExcludedChannels"];
}


<div>
    <div class="card-container-3">
        <form name="form-enable" method="post">

            <input type="text" class="form-control card-component-3 card-heading card-strong" value="Settings" readonly>

            <div class="input-group flex-nowrap">
                <span class="input-group-prepend input-group-text card-component-2">Enable</span>
                <div class="input-group-text card-component-1">
                    <input type="checkbox" name="enabled" class="form-control checkbox" @VoiceLinkModel.GetIsChecked(row.Enabled)>
                </div>

            </div>
            <div class="input-group flex-nowrap">
                <span class="input-group-prepend input-group-text card-component-2">Delete Channels</span>
                <div class="input-group-text card-component-1">
                    <input type="checkbox" name="deleteChannels" class="form-control checkbox" @VoiceLinkModel.GetIsChecked(row.DeleteChannels)>
                </div>
            </div>
            <div class="input-group flex-nowrap">
                <span class="input-group-text input-group-prepend card-component-2">Channel Prefix</span>
                <input type="text" name="prefix" class="form-control card-component-1" value="@row.Prefix.Value">
            </div>

            <div class="input-group flex-nowrap">
                <span class="input-group-prepend input-group-text card-component-2 card-strong"></span>
                <button type="submit" class="btn  card-component-1 card-button card-strong">Save</button>
            </div>
        </form>
    </div>
</div>

<div class="dropdown belowcards">
    <button class="btn btn-secondary dropdown-toggle dropdown-200" type="button" data-toggle="dropdown" id="dropdownAddChannel" aria-haspopup="true" aria-expanded="false">
        Exclude channel...
    </button>
    <div class="dropdown-menu dropdown-200-content noverticalpadding" aria-labelledby="dropdownExcludeChannel">
        @foreach (RestVoiceChannel channel in nonExcludedChannels)
        {
            <form method="post" name="noajax">
                <input type="hidden" name="channel" value="@channel.Id" />
                <button class="dropdown-item" asp-page-handler="Exclude" type="submit">@channel.Name</button>
            </form>
        }
    </div>
</div>

@foreach (RestVoiceChannel excludedChannel in excludedChannels)
{
    <div class="card-container-3">
        <form method="post">

            <input type="hidden" name="channel" value="@excludedChannel.Id" />

            <div class="input-group flex-nowrap">
                <input type="text" class="form-control input-group-text list-input text-left card-component-3 card-strong" value="@excludedChannel.Name" readonly>
                <button type="submit" name="noajax" asp-page-handler="Remove" class="btn card-button-x card-strong">
                    <svg width="38px" height="38px" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path transform="translate(0.4, 0)" fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                </button>

            </div>


        </form>
    </div>
}
