@page "{guild?}/core"
@using Database.Data
@using Discord.Rest
@model UtiliSite.Pages.Dashboard.CoreModel
@{
    if (ViewData["guild"] == null) { return; }

    Layout = "Shared/_Layout.cshtml";
    ViewData["Title"] = "Utili Dashboard";

    ViewData["heading"] = "Utili Dashboard";
    ViewData["subheading"] = "Configure Utili's features using the sidebar";
    ViewData["detailed"] = "Only users with the manage server permission can view or edit settings on the Utili dashboard.";

    CoreRow row = (CoreRow)ViewData["row"];
    string nickname = (string)ViewData["nickname"];

    List<RestTextChannel> excludedChannels = (List<RestTextChannel>)ViewData["excludedChannels"];
    List<RestTextChannel> nonExcludedChannels = (List<RestTextChannel>)ViewData["nonExcludedChannels"];
}

<div>
    <div class="card-container-4">
        <form method="post">

            <input type="text" class="form-control card-strong card-component-4 card-heading" value="Settings" readonly>

            <div class="input-group flex-nowrap">
                <span class="input-group-prepend input-group-text card-component-2">Nickname</span>
                <input type="text" name="nickname" class="form-control card-component-2" value="@nickname">
            </div>

            <div class="input-group flex-nowrap">
                <span class="input-group-prepend input-group-text card-component-2">Command Prefix</span>
                <input type="text" name="prefix" class="form-control card-component-2" value="@row.Prefix.Value">
            </div>

            <div class="input-group flex-nowrap">
                <span class="input-group-prepend input-group-text card-component-2">Enable Commands</span>
                <div class="input-group-text card-component-2">
                    <input type="checkbox" name="enableCommands" class="form-control checkbox" onchange="updateDropdownTitle()" @(row.EnableCommands ? "checked" : "") )>
                </div>
            </div>

            <div class="input-group flex-nowrap">
                <span class="input-group-prepend input-group-text card-component-3 card-strong"></span>
                <button type="submit" class="btn card-button card-component-1 card-strong">Save</button>
            </div>
        </form>
    </div>
</div>

<div class="dropdown belowcards">
    <button class="btn btn-secondary dropdown-toggle dropdown-200" type="button" data-toggle="dropdown" id="dropdownAddChannel" aria-haspopup="true" aria-expanded="false">
        @(row.EnableCommands ? "Disable" : "Enable") commands in...
    </button>
    <div class="dropdown-menu dropdown-200-content noverticalpadding" aria-labelledby="dropdownExcludeChannel">
        @foreach (RestTextChannel channel in nonExcludedChannels)
        {
            <form method="post" name="noajax">
                <input type="hidden" name="channel" value="@channel.Id" />
                <button class="dropdown-item" asp-page-handler="Exclude" type="submit">@channel.Name</button>
            </form>
        }
    </div>
</div>

<script type="text/javascript">
    function updateDropdownTitle() {
        var enableCommands = $("input[name='enableCommands']:checked").length > 0;

        if (enableCommands) {
            $("#dropdownAddChannel").html("Disable commands in...");
        } else {
            $("#dropdownAddChannel").html("Enable commands in...");
        }
    }
</script>

@foreach (RestTextChannel excludedChannel in excludedChannels)
{
    <div class="card-container-3">
        <form method="post">

            <input type="hidden" name="channel" value="@excludedChannel.Id" />

            <div class="input-group flex-nowrap">
                <input type="text" class="form-control input-group-text list-input text-left card-component-3" value="@excludedChannel.Name" readonly>
                <button type="submit" name="noajax" asp-page-handler="Remove" class="btn card-button-x card-strong">
                    <svg width="38px" height="38px" viewBox="0 0 16 16" class="bi bi-x" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path transform="translate(0.4, 0)" fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                </button>

            </div>


        </form>
    </div>
}