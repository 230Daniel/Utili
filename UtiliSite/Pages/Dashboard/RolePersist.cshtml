@page "{guild?}/core"
@using Database.Data
@using Discord.Rest
@model UtiliSite.Pages.Dashboard.RolePersistModel
@{
    Layout = "Shared/_Layout.cshtml";
    ViewData["Title"] = "Role Persist - Utili Dashboard";

    ViewData["heading"] = "Role Persist";
    ViewData["subheading"] = "Users which leave and join will have their roles given back to them.";
    ViewData["detailed"] = "";

    RolePersistRow row = (RolePersistRow)ViewData["row"];
    List<RestRole> excludedRoles = (List<RestRole>)ViewData["excludedRoles"];
    List<RestRole> nonExcludedRoles = (List<RestRole>)ViewData["nonExcludedRoles"];
}

<div>
    <div class="card-container-4">
        <form method="post">

            <input type="text" class="form-control card-strong card-component-3 card-heading" value="Settings" readonly>

            <div class="input-group flex-nowrap">
                <span class="input-group-prepend input-group-text card-component-1">Enable</span>
                <div class="input-group-text card-component-2">
                    <input type="checkbox" name="enable" class="form-control checkbox" @(row.Enabled ? "checked" : "") )>
                </div>
            </div>

            <div class="input-group flex-nowrap">
                <span class="input-group-prepend input-group-text card-component-2 card-strong"></span>
                <button type="submit" class="btn card-button card-component-1 card-strong">Save</button>
            </div>
        </form>
    </div>
</div>

<div class="dropdown belowcards">
    <button class="btn btn-secondary dropdown-toggle dropdown-200" type="button" data-toggle="dropdown" id="dropdownExcludeRole" aria-haspopup="true" aria-expanded="false">
        Exclude role...
    </button>
    <div class="dropdown-menu dropdown-200-content noverticalpadding" aria-labelledby="dropdownExcludeChannel">
        @foreach (RestRole role in nonExcludedRoles)
        {
            <form method="post" name="noajax">
                <input type="hidden" name="role" value="@role.Id" />
                <button class="dropdown-item" asp-page-handler="Exclude" type="submit">@role.Name</button>
            </form>
        }
    </div>
</div>

@foreach (RestRole role in excludedRoles)
{
    <div class="card-container-3">
        <form method="post">

            <input type="hidden" name="role" value="@role.Id" />

            <div class="input-group flex-nowrap">
                <input type="text" class="form-control input-group-text list-input text-left card-component-3 card-strong" value="@role.Name" readonly>
                <button type="submit" name="noajax" asp-page-handler="Remove" class="btn card-button-x card-strong">
                    <svg width="38px" height="38px" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path transform="translate(0.4, 0)" fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                </button>
            </div>
        </form>
    </div>
}