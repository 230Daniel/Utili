@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@{
    AuthDetails auth = (AuthDetails) ViewData["auth"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Add the Utili Discord bot to your server to enjoy some free utility features.">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/nav.css" />
    <link rel="stylesheet" href="~/css/scrollbar.css" />
</head>
<body onload="onLoad()" style="opacity: 0;">
<header>
    <nav class="navbar navbar-expand-sm navbar-light" id="navbar" style="background-color: #e9ecef;">
        <div class="container" id="main-nav">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="https://file.utili.xyz/UtiliSmall.png" width="33" height="33" alt="Logo" class="d-inline-block align-top">
                Utili
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex">

                <div class="navbar-nav flex-grow-1" style="justify-content: flex-start;">
                    <div class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Content("~/commands")">Commands</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Content("~/dashboard")">Dashboard</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Content("~/premium")">Premium</a>
                    </div>
                </div>

                @if (SidebarHelper.GetIsActive(ViewContext, "error") != "active")
                {
                    <div class="navbar-nav flex-grow-1" style="justify-content: flex-end;">
                        @if (auth?.User is not null)
                        {
                            <div class="dropdown noverticalpadding">
                                <a class="nav-link text-dark dropdown-toggle noverticalpadding" style="align-items: center; display: flex;" data-toggle="dropdown" role="button" id="userDropdown" aria-haspopup="true" aria-expanded="false" href="#">
                                    <img src="@(auth.User.GetAvatarUrl(size: 32))" class="user-icon" alt="User Icon" style="margin-right: 8px;">
                                    @(auth.User.Username)
                                </a>
                                <div class="dropdown-menu dropdown-menu-left noverticalpadding" style="border: 0;" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" id="signoutDropdown" asp-area="" asp-page="/signout">Sign out</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <form>
                                <a class="nav-link text-dark" asp-area="" asp-page="/signin">Sign in</a>
                            </form>
                        }
                    </div>
                }
                </div>
            </div>
        </nav>
    </header>

    <div class="scroll-always scroll-dark dynamic-height">
        <div class="container" style="margin-top: 23px;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <div class="footer" hidden>
            <div class="text-white" style="width: 75vw; margin-left: auto; margin-right: auto;">
                <span style="float: left">© Daniel Baynton & Iemanie Suryadean 2020-2021</span>
                <span style="float: right">
                    <a class="a-blue spaced4" href="@RedirectHelper.GoToPage(ViewContext, "terms")">Terms</a> •
                    <a class="a-blue spaced4" href="@RedirectHelper.GoToPage(ViewContext, "privacy")">Privacy</a> •
                    <a class="a-blue spaced4" href="@RedirectHelper.GoToPage(ViewContext, "contact")">Contact</a>
                </span>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script type="text/javascript" >
        sizeElements();
        $("body").css("opacity", "1");
    </script>

    @RenderSection("Scripts", required: false)

    </body>
</html>
