@page
@using System.Diagnostics
@model ErrorModel
@{
    ViewData["Title"] = "Error - Utili";
    string requestId = Activity.Current?.Id ?? HttpContext.TraceIdentifier;
}
<style>
    body {
        background-color: #fff !important;
    }
</style>

<h1 class="text-danger" style="font-size: 120px;">:(</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

<p style="margin-top: 16px; margin-bottom: 16px;">
    Please report this error on discord <a href="https://discord.gg/yrM4YUczVp" target="_blank">here</a> quoting the request ID <code>@requestId</code>.
</p>
<p style="margin-top: 16px; margin-bottom: 16px;">
    @ErrorLoggingMiddleware.GetErrorMessage(requestId)
</p>

<button class="btn" style="padding: 0;" onclick="history.back(2);">
    Return to site
</button>